<UserControl x:Class="ToDoList.Views.ListOfTasksUserControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:model="clr-namespace:ToDoList.Models"
      >

    <DockPanel>
        <ListView DockPanel.Dock="Top" x:Name="ListOfTasks" ItemsSource="{Binding Tasks}"   VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" >
            <ListView.ItemTemplate >
                <DataTemplate>
                    <Button Tag="{Binding}" Click="Edit_Click" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" BorderBrush="Black" Foreground="#FFBD1D1D" HorizontalContentAlignment="Stretch" >
                        <StackPanel>
                            <TextBlock x:Name="LoginField" Text="{Binding Name}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <TextBlock DockPanel.Dock="Bottom"  x:Name="ErrorMsg" Foreground="red" Height="45" Panel.ZIndex="100" TextWrapping="Wrap" Visibility="Hidden" VerticalAlignment="Bottom" />
    </DockPanel>
</UserControl>
