<Page x:Class="ToDoList.Pages.ListPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:model="clr-namespace:ToDoList.Models" Height="450" Width="800"
      >
    <Viewbox Margin="0,10,0,0" Height="435" VerticalAlignment="Top">
        <Grid Height="439" >
            <ListView x:Name="ListOfTasks" ItemsSource="{Binding Tasks}" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" Height="439" VerticalAlignment="Center" HorizontalAlignment="Center" Width="800">
               
                <ListView.ItemTemplate >
                    <DataTemplate>
                        <Button Tag="{Binding}" Click="Edit_Click" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" BorderBrush="Black" Foreground="#FFBD1D1D" >
                            <StackPanel>
                                <TextBlock x:Name="LoginField" Text="{Binding Name}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <TextBlock x:Name="ErrorMsg" Foreground="red" Height="39" Panel.ZIndex="100" TextWrapping="Wrap" Visibility="Hidden" Margin="0,390,0,20" />
        </Grid>

    </Viewbox>

</Page>
